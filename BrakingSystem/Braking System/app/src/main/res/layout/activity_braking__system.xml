<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_braking__system"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/auto_pic_resize"
    tools:context="com.example.shake.braking_system.Braking_System">

    <ImageButton
        android:alpha="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/tire_b"
        android:id="@+id/btnRR"
        android:layout_alignTop="@+id/btnRL"
        android:layout_alignLeft="@+id/btnFR"
        android:layout_alignStart="@+id/btnFR"
        android:contentDescription="tiresbutton" />

    <ImageButton
        android:alpha="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/tire_b"
        android:layout_marginRight="66dp"
        android:layout_marginEnd="66dp"
        android:id="@+id/btnFR"
        android:contentDescription="tiresbutton"
        android:layout_alignTop="@+id/btnFL"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:alpha="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/tire_b"
        android:id="@+id/btnFL"
        android:contentDescription="tiresbutton"
        android:layout_marginTop="46dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/btnFR"
        android:layout_toStartOf="@+id/btnFR"
        android:layout_marginRight="49dp"
        android:layout_marginEnd="49dp" />

    <ImageButton
        android:alpha="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/tire_b"
        android:layout_marginBottom="58dp"
        android:id="@+id/btnRL"
        android:contentDescription="tiresbutton"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/btnFL"
        android:layout_alignStart="@+id/btnFL" />

</RelativeLayout>
