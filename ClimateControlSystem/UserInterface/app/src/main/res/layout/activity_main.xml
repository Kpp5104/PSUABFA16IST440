<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorPrimary"
    tools:context="com.example.amanda.userinterface.MainActivity">

    <TextView
        android:text="60"
        android:textColor="@android:color/white"
        android:textSize="35sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/temp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/increase"
        android:layout_alignStart="@+id/increase"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp" />

    <Button
        android:textSize="15sp"
        android:background="@android:drawable/arrow_up_float"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp"
        android:id="@+id/increase_pass"
        android:layout_alignBaseline="@+id/increase"
        android:layout_alignBottom="@+id/increase"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:backgroundTint="@android:color/holo_red_light" />

    <TextView
        android:text="60"
        android:textColor="@android:color/white"
        android:textSize="35sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/temp_pass"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:layout_alignBaseline="@+id/temp"
        android:layout_alignBottom="@+id/temp"
        android:layout_alignLeft="@+id/increase_pass"
        android:layout_alignStart="@+id/increase_pass" />

    <Button
        android:textSize="15sp"
        android:background="@android:drawable/arrow_down_float"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/decrease_pass"
        android:layout_alignBaseline="@+id/decrease"
        android:layout_alignBottom="@+id/decrease"
        android:layout_alignLeft="@+id/increase_pass"
        android:layout_alignStart="@+id/increase_pass"
        android:backgroundTint="@android:color/holo_blue_light" />

    <Button
        android:textSize="15sp"
        android:background="@android:drawable/arrow_up_float"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/increase"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:layout_above="@+id/temp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:backgroundTint="@android:color/holo_red_light" />

    <Button
        android:textSize="15sp"
        android:background="@android:drawable/arrow_down_float"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/decrease"
        android:layout_below="@+id/temp"
        android:layout_alignLeft="@+id/increase"
        android:layout_alignStart="@+id/increase"
        android:backgroundTint="@android:color/holo_blue_light" />

    <ToggleButton
        android:text="ToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toggleButton2"
        android:layout_below="@+id/decrease_pass"
        android:layout_alignLeft="@+id/switch1"
        android:layout_alignStart="@+id/switch1"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp" />

    <Button
        android:text="HEAT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/heat_button"
        android:layout_alignBottom="@+id/switch1"
        android:layout_toRightOf="@+id/switch1"
        android:layout_toEndOf="@+id/switch1" />

    <TextView
        android:text="Exterior Temp ___"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/exterior_degree"
        android:layout_above="@+id/ac_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="A/C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ac_button"
        android:layout_above="@+id/increase"
        android:layout_alignRight="@+id/fan"
        android:layout_alignEnd="@+id/fan" />

    <TextView
        android:text="FAN"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="22dp"
        android:layout_marginEnd="22dp"
        android:id="@+id/fan"
        android:layout_alignBaseline="@+id/toggleButton2"
        android:layout_alignBottom="@+id/toggleButton2"
        android:layout_toLeftOf="@+id/toggleButton2"
        android:layout_toStartOf="@+id/toggleButton2" />

    <Switch
        android:text="Defrost"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch1"
        android:layout_alignBottom="@+id/ac_button"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
