<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ist440.controls.LightsControl"
    android:background="#494949">

    <TextView
        android:text="Lighting Controls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="70dp"
        android:id="@+id/lblLightingControls"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="110dp"
        android:src="@drawable/icon_high_beam"
        android:layout_below="@+id/lblLightingControls"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:id="@+id/iconHighBeams"
        android:visibility="invisible"
        android:elevation="24dp"
        android:tint="@android:color/holo_blue_bright"
        android:backgroundTintMode="add" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Head Lights"
        android:id="@+id/switchHeadLights"
        android:textColor="#ffffff"
        android:trackTint="#ffffff"
        android:splitTrack="false"
        android:showText="true"
        android:switchPadding="15dp"
        android:switchMinWidth="10dp"
        android:textSize="40dp"
        android:layout_below="@+id/iconHighBeams"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        tools:style="@android:style/Widget.Holo.Light.CompoundButton.Switch" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="High Beams"
        android:id="@+id/switchHighBeams"
        android:textColor="#ffffff"
        android:trackTint="#ffffff"
        android:splitTrack="false"
        android:showText="true"
        android:switchPadding="15dp"
        android:switchMinWidth="10dp"
        android:textSize="40dp"
        android:layout_below="@+id/switchHeadLights"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        tools:style="@android:style/Widget.Holo.Light.CompoundButton.Switch" />
</RelativeLayout>
